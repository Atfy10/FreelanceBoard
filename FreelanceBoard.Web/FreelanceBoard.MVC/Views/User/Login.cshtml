@model FreelanceBoard.MVC.Models.LoginViewModel

<section class="auth-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-12">
                <div class="auth-form-container">
                    <div class="auth-form-header">
                        <div class="logo-container">
                            <i class="bi-person-fill"></i>
                        </div>
                        <h2>Welcome Back</h2>
                        <p>Sign in to your Gotto account to continue</p>
                    </div>

                    <!-- Single Message Container -->
                    <div id="messageContainer" class="mt-3 d-none">
                        <div id="messageContent" class="alert" role="alert"></div>
                    </div>

                    <form asp-action="Login" asp-controller="User" method="post" id="loginForm">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="Email">Email</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi-envelope"></i></span>
                                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required>
                            </div>
                            <div class="invalid-feedback d-block" id="Email-error"></div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Password">Password</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi-lock"></i></span>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required>
                                <button type="button" class="btn btn-outline-secondary password-toggle-btn" data-field="Password">
                                    <i class="bi-eye" id="Password-eye"></i>
                                </button>
                            </div>
                            <div class="invalid-feedback d-block" id="Password-error"></div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="forgot-password">
                                <a href="#">Forgot password?</a>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-3" id="loginBtn">
                            <i class="bi-box-arrow-in-right me-2"></i>
                            Sign In
                        </button>
                    </form>

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mt-3"></div>

                    <div class="auth-links mt-3">
                        <p>Don't have an account? <a href="/User/Register">Create one here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/User/login.css" />
}

@section Scripts {
    <script src="~/js/User/login.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}